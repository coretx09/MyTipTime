<resources xmlns:tools="http://schemas.android.com/tools">
    <!--THEME:
    Un thème est un ensemble d'attributs appliqués à l'ensemble d'une application,
    d'une activité ou d'une hiérarchie de vues, et pas seulement à une vue individuelle. -->

    <!-- Base application theme. -->
    <style name="Theme.MyTipTime" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#880E4F</item>
        <item name="colorPrimaryVariant">#E91E63</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF80AB</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

        <!-- TextInputLayout Style:  Styliser en OutlinedBox/FilledBox -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox</item>

        <!-- RadioButton style: Styliser par notre prope style cree -->
        <item name="radioButtonStyle">@style/Widget.MyTipTime.CompoundButton.RadioButton</item>

        <!-- Switch style: Styliser par notre prope style cree -->
        <item name="switchStyle">@style/Widget.MyTipTime.CompoundButton.Switch.</item>

    </style>
</resources>