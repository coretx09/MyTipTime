<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- STYLE:
    Un style est un ensemble d'attributs qui spécifient l'apparence d'un seul View individuel .
    Un style peut spécifier des attributs tels que la couleur de la police,
    la taille de la police, la couleur de l'arrière-plan et bien plus encore. -->

    <!-- TextView-Style -->
    <style name="Widget.MyTipTime.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">@dimen/min_text_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <!--Switch-Style -->
    <style name="Widget.MyTipTime.CompoundButton.Switch." parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:minHeight">@dimen/min_text_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <!-- RadioButton-Style -->
    <style name="Widget.MyTipTime.CompoundButton.RadioButton"
        parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:paddingStart">8dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>
</resources>